# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional - for OpenAI embeddings
DEEPSEEK_API_KEY=your_deepseek_api_key_here  # Optional - for DeepSeek model

# Database Configuration
VECTOR_DB_PATH=./data/vectordb
VECTOR_DB_TYPE=chromadb  # Options: chromadb, qdrant

# File Upload Configuration
UPLOAD_PATH=./data/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# Model Configuration
MODEL_NAME=claude-3-opus-20240229  # Options: claude-3-opus-20240229, deepseek-chat, deepseek-coder
LLM_PROVIDER=anthropic  # Options: anthropic, deepseek
DEEPSEEK_MODEL=deepseek-chat  # Options: deepseek-chat, deepseek-coder
EMBEDDING_MODEL=all-MiniLM-L6-v2  # For sentence-transformers
# EMBEDDING_MODEL=text-embedding-3-small  # For OpenAI embeddings

# Application Configuration
LOG_LEVEL=INFO
CACHE_PATH=./data/cache
SESSION_TIMEOUT=3600  # 1 hour in seconds